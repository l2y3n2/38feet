/* pages/homePage/home.wxss */
page{
  background-color: #111622;
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* 主体 */
.container{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  position: relative;
}

/* 胶囊左边文字样式 */
.menuButtonLeftView{
  color: #ffffff;
  font-size: 40rpx;
  position: absolute;
  border-bottom: 2px solid  #2E3546;
}

.containerImage{
  width: 38%;
  height: 16.7%;
  margin-left: 33%;
  margin-top: 60%;
  color: #ffffff;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 底部蓝线 */
.bottomLineHome{
  width: 33.3%;
  position: absolute;
  height: 1px;
  bottom: 0;
  left: 33.3%;
  background: linear-gradient(to right, #0078FF, #7E00FF);
}

/* 主体部分 */
.main{
  display: flex;
  flex-direction: row;
  height: 200rpx;
  width: 94%;
  left: 6%;
  position: absolute;
}

.mainTop{
  display: flex;
  flex-direction: column;
  width: 33.3%;
  color: #6D778B;
}

.template{
  position: absolute;
  bottom: 1px;
  width: 94%;
  left: 6%;
}


