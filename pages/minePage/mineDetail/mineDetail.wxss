/* pages/minePage/mineDetail/mineDetail.wxss */
page{
  height: 100%;
  width: 100%;
  background: #111622;
}

/* container */
.container{
  display: flex;
  flex-direction: column;
}

/* 胶囊部分的样式 */
.mennuButton{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: relative;
  color: #ffffff;
}

.mennuButton image{
  width: 36px;
  height: 36px;
  position: absolute;
  left: 20px;
}

/* 用户信息 */
.user{
  border-top:1px solid #1A202E;
  width: 100%;
  height: 1000rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user image{
  width: 80px;
  height: 80px;
  border-radius: 100%;
  margin-top: 50rpx;
}

.userDetail{
  width: 80%;
  display: flex;
  flex-direction: column;
  border-top: 1px solid #2E3546;
  margin-top: 50rpx;
}

.userDetail view{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  border-bottom: 1px solid #2E3546;
  color: #ffffff;
}

.userDetail view image{
  width: 9px;
  height: 16px;
}


/* 编辑样式 */
.bianji{
  width: 100%;
  height: 500rpx;
  margin-top: 30rpx;
  border-top: 1px solid #2E3546;
}

.input{
  color: #ffffff;
  margin-left: 10%;
  width: 80%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1 solid#2E3546;
  margin-top: 40rpx;
}

.line{
  width: 80%;
  margin-left: 10%;
  height: 1px;
  background-color: #2E3546;
}

.button{
  height: 100rpx;
  width: 80%;
  background-color: #0078FF;
  color: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-left: 10%;
  border-radius: 50rpx;
  margin-top: 50rpx;
}