/* pages/homePage/home.wxss */
page{
  background-color: #111622;
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* 主体 */
.container{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  position: relative;
}

/* 顶部 */
.top{
  height: 33.3%;
  width: 100%;
  background: linear-gradient(to right, #465167, #171E2F);
  display: flex;
  flex-direction: row;
  align-items: center;
}

.topImage{
  width: 160rpx;
  height: 160rpx;
  margin-left: 10%;
  border-radius: 100%;
}

.topName{
  display: flex;
  flex-direction: column;
  width: 300rpx;
  height: 100rpx;
  margin-left: 20rpx;
  color: #ffffff;
  font-size: 40rpx;
}

.change{
  height: 100rpx;
  width: 20%;
  display: flex;
  flex-direction: row;
  font-size: 22rpx;
  margin-left: 20rpx;
  color: #ffffff;
  justify-content: center;
  align-items: center;
}

.changImage{
  width: 15rpx;
  height: 26rpx;
  margin-left: 20rpx;
}

/* 主体 */
.main{
  position: absolute;
  bottom: 0;
  height: 69%;
  background: #111622;
  border-radius: 25rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mainTop{
  width: 80%;
  height: 50rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #ffffff;
  position: relative;
}

.mainImage{
  margin-top: 30%;
  font-size: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #AAB5CA;
}

.isHave{
  height: 82%;
  width: 80%;
  color: #ffffff;
  position: absolute;
  bottom: 0;
}

.machine{
  width: 100%;
  height: 200rpx;
  margin-bottom: 40rpx;
  background-color: #1A202E;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.machine-name{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  height: 70px;
  position: relative;
  width: 60%;
}

/*与弹窗有关的*/
.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.4);   /*设置阴影半透明背景如： background: rgba(0, 0, 0, 0.4);*/
  display: none;
}

.zan-dialog__container {
  position: fixed;
  top: 171.7px;
  width: 262px;    /*弹窗布局宽*/
  height: 248px;   /*弹窗布局高，与下面弹出距离transform有关*/
  margin-left: 62px;
  background: #1A202E;
  transform: translateY(300%);  /*弹框弹出距离，与弹框布局高度有关，如300%表示弹起距离为3倍弹窗高度 */
  transition: all 0.4s ease;
  z-index: 12;
  border-radius: 20rpx;
 /* box-shadow: 0px 3px 3px 2px gainsboro;  /*弹框的悬浮阴影效果，如不需要可注释该行*/ 
}
.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}

.btn{
  color: white;
  font-size: 15px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 140px;
  border-radius: 50rpx;
}

