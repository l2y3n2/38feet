/* pages/homePage/home.wxss */
page{
  background-color: #111622;
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* 主体 */
.container{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  position: relative;
}

/* 胶囊左边文字样式 */
.menuButtonLeftView{
  color: #ffffff;
  font-size: 40rpx;
  position: absolute;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.mian{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #ffffff;
  margin-top: 60%;
}

.button{
  position: absolute;
  width: 80%;
  height: 100rpx;
  bottom: 50px;
  border-radius: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #2E3546;
  color: #ffffff;
  font-size: 16px;
  left: 10%;
}

